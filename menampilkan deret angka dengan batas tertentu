#include <iostream.h>
#include <conio.h>

using namespace std;
int main()
{
  int angka;

  cout<<"Masukkan angka : ";
  cin>>angka;
  do {cout<<angka<<"";
      angka--;/ *nilai dari variabel angka 
                akan terus berkurang hingga mencaai 
                batas yaitu 1*/
}
while (angka>=1); /*jika nilai dari 
                      variabel angka belum mencapai ankga 1 ,
                          maka program akan terus diulang hingga 
                            mencapai angka 1*/
cout<<endl;
return 0;

		
}
